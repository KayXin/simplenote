<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyu.modules.biz.article.dao.ArticleAttrDao">
    <sql id="Base_Column_List">
        a.id as id,
        a.article_id as articleId,
        a.readNum as
        readNum,
        a.commentNum as commentNum
    </sql>

    <select id="get"
        resultType="com.xiaoyu.modules.biz.article.entity.ArticleAttr"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleAttr">
        select
        <include refid="Base_Column_List" />
        from biz_article_attr as a
        where a.id = #{id} and a.del_flag=0
    </select>

    <!-- 分页查询用户信息 -->
    <select id="findByList"
        resultType="com.xiaoyu.modules.biz.article.entity.ArticleAttr"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleAttr">
        select
        <include refid="Base_Column_List" />
        from biz_article_attr as a where a.del_flag=0
    </select>

    <delete id="delete"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleAttr">
        update biz_article_attr set
        del_flag=1
        where id =
        #{id}
    </delete>


    <insert id="insert"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleAttr">
        insert into biz_article_attr
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="articleId != null">
                article_id,
            </if>
            <if test="readNum != null">
                read_num,
            </if>
            <if test="likeNum != null">
                like_num,
            </if>
            <if test="collectNum != null">
                collect_num,
            </if>
            <if test="createDate != null">
                create_date,
            </if>
            <if test="updateDate != null">
                update_date,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>
            <if test="commentNum != null">
                commentNum,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="articleId != null">
                #{articleId},
            </if>
            <if test="readNum != null">
                #{readNum},
            </if>
            <if test="likeNum != null">
                #{likeNum},
            </if>
            <if test="collectNum != null">
                #{collectNum},
            </if>
            <if test="createDate != null">
                #{createDate},
            </if>
            <if test="updateDate != null">
                #{updateDate},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
            <if test="commentNum != null">
                #{commentNum},
            </if>
        </trim>
    </insert>


    <update id="update"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleAttr">
        update biz_article_attr
        <set>
            <if test="readNum != null">
                read_num = #{readNum},
            </if>
            <if test="likeNum != null">
                like_num = #{likeNum},
            </if>
            <if test="collectNum != null">
                collect_num = #{collectNum},
            </if>
            <if test="commentNum != null">
                comment_num = #{commentNum},
            </if>
        </set>
        where article_id= #{articleId}
    </update>

    <select id="isExist"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleAttr"
        resultType="java.lang.Integer">
        select count(*) from biz_article_attr
        where del_flag=0
        <if test="id != null">
            and id=#{id}
        </if>
        <if test="articleId != null">
            and article_id = #{articleId}
        </if>

    </select>

    <select id="getForUpdate" parameterType="java.lang.String"
        resultType="com.xiaoyu.modules.biz.article.entity.ArticleAttr">
        select * from biz_article_attr
        where
        article_id=#{articleId}
        for update
    </select>
</mapper>